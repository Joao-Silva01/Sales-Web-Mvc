@using System.Globalization
@model IEnumerable<Sales_Web_Mvc.Models.Seller>
@{
    //ViewData["Title"] = "Index";
    ViewData["Title"] = this.ViewContext.RouteData.Values["controller"].ToString();
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-light">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="sucess">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                 </td>
                <td>
                    @item.BirthDate.ToShortDateString()
                </td>
                <td>
                    @item.BaseSalary.ToString("N2", CultureInfo.CurrentCulture)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
