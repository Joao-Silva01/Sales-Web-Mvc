@model Sales_Web_Mvc.Models.ViewModels.SellerFormViewModel;
@{
    ViewData["Title"] = this.ViewContext.RouteData.Values["action"].ToString();
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Sellers" asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <strong><label asp-for="Seller.Name" class="control-label"></label></strong>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Seller.Email" class="control-label"></label></strong>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Seller.BirthDate" class="control-label"></label></strong>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Seller.BaseSalary" class="control-label"></label></strong>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Seller.DepartmentId" class="control-label"></label></strong>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class=" btn btn-light" /> |
                <a asp-action="Delete" asp-route-id="@Model.Seller.Id" class="btn btn-danger">Delete</a> |
                <a asp-action="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
                {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}